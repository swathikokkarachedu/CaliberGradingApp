<%- model_class = Course -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<div class="container" style="margin-left:384px;">
    <div class="row col-md-6 col-md-offset-2 custyle">
    <table class="table table-striped custab">
    <thead>
    
	<%= link_to "+ Add new course",
            new_course_path,
            :class => 'btn btn-primary btn-xs pull-right',:style=> "color:#fff" %>
        <tr>
            <th>Name</th>
            <th>Professor Name</th>
            <th>No Of Student#</th>
            <th class="text-center">Action</th>
        </tr>
    </thead>
	     <%if @courses.present?%>
	       <%@courses.each do |c|%>
            <tr>
                <td><%=c.name%></td>
                <td><%=c.prof_name%></td>
                <td><%=c.no_of_students%></td>
                <td class="text-center">
				 <a class='btn btn-info btn-xs' href="/courses/<%=c.id%>/edit" style="color:#fff"><span class="glyphicon glyphicon-edit"></span> Edit</a> 
				<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      "/course/delete/#{c.id}",
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
				</td>
            </tr>
		<%end%>
	<%else%>
	  <tr >
	   <td colspan="4" style="text-align:center">
	    No courses are added yet!
		</td>
	  </tr>
	<%end%>
    </table>
    </div>
</div>


