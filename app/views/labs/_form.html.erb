<script>
 $(function() {
  $("#lab_due_date").datepicker({
		  autoclose: true,
		  format: "yyyy-mm-dd"
	    });
 });
</script>

<%= form_for @lab, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :course_id, :class => 'control-label' %>
    <div class="controls">
	  <%@courses = Course.all%>
	  <%= f.select :course_id, options_for_select(@courses.map{ |c| [c.name, c.id] },:selected => @lab.course_id),{:include_blank => '- Select Course -'} %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :total_marks, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :total_marks, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :due_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :due_date, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                labs_path, :class => 'btn' %>
  </div>
<% end %>
